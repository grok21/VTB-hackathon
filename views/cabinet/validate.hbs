 <div class="auth"> 
  <div class="row">
    <div id="login" class="col s6 offset-s3"> 
      <img src="{{qr_image}}">
      <form action="/cabinet/validate" method="POST">
        <div class="input-field">
            <input id="token" name="token" type="number" class="validate" required min="1">
            <label for="token">E-mail</label>
            <span class="helper-text" data-error="Введите token"></span>
        </div>
        <input type="hidden" name="_csrf" value="{{csrf}}">

        <button class="btn btn-primary" type="submit" id="button-submit">Validate</button>
      </form>
    </div>
   </div>
</div>